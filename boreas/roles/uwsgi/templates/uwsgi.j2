[uwsgi]
uid = {{ user }}
gid = {{ group }}

need-plugins = python

chdir = {{ dir }}
# home = {{ dir }}
module = {{ wsgi }}:application
# wsgi-file = web.py

virtualenv = /home/{{ user }}/.virtualenvs/{{ site }}

processes = {{ num_procs | default(4) }}

chown-socket=www-data:www-data
# chmod-socket = 664
vacuum = true

die-on-term = true
