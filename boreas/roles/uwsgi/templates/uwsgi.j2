[uwsgi]
uid = {{ user }}
gid = {{ group }}

{% if site == 'theatricalia-staging-3' %}
need-plugins = python3
{% else %}
need-plugins = python
{% endif %}

chdir = {{ dir }}
# home = {{ dir }}
module = {{ wsgi }}:application
# wsgi-file = web.py

virtualenv = /home/{{ user }}/.virtualenvs/{{ site }}

processes = {{ num_procs | default(4) }}

chown-socket=www-data:www-data
# chmod-socket = 664
vacuum = true

die-on-term = true
